generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Logo {
  id         String   @id @default(uuid())
  name       String
  userId     String
  templateId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([templateId])
}

model LogoVersion {
  id            String   @id @default(uuid())
  logoId        String
  versionNumber Int
  prompt        String
  style         String?
  size          String?
  imageUrl      String
  modelId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([logoId])
  @@index([modelId])
}

model ModelType {
  id                     String   @id @default(uuid())
  name                   String
  description            String
  provider               String
  defaultPromptStructure String
  pricingPerRequest      Float
  status                 String?  @default("pending")
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Template {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Format {
  SVG
  JPG
  PNG
}
