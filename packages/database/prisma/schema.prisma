generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Logo {
  id         String   @id
  name       String
  userId     String
  templateId String
  createdAt  DateTime @default(now())
  updateddAt DateTime

  @@index([templateId])
}

model LogoVersion {
  id            String   @id
  logoId        String
  versionNumber Int
  prompt        String
  style         String?
  size          String?
  imageUrl      String
  modelId       String
  createdAt     DateTime @default(now())
  updateddAt    DateTime

  @@index([logoId])
  @@index([modelId])
}

model ModelType {
  id                     String   @id
  name                   String
  description            String
  provider               String
  defaultPromptStructure String
  pricingPerRequest      Float
  status                 String?  @default("pending")
  createdAt              DateTime @default(now())
  updatedAt              DateTime
}

model Template {
  id          String   @id
  name        String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
  updateddAt  DateTime
}

enum Format {
  SVG
  JPG
  PNG
}
